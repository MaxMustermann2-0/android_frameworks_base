<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/dash_search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/search"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="@dimen/dash_caption_size" />

                <GridView
                    android:id="@+id/dash_content_grid"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:fastScrollEnabled="true"
                    android:requiresFadingEdge="vertical" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/dash_search_progress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                android:indeterminateTint="#fff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dash_deleter_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:alpha="0.0"
                android:src="@drawable/recents_deleter_bg" />

            <ImageView
                android:id="@+id/dash_deleter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                android:alpha="0.0"
                android:src="@drawable/ic_qs_tile_delete"
                android:tint="#fff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:text="@string/recent_apps"
                android:textColor="#fff"
                android:textSize="@dimen/dash_caption_size" />
            <!-- Recents View -->
            <com.android.systemui.recents.views.VerticalRecentTasksView
                android:id="@+id/recent_tasks"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/recents_actions_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:clickable="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/recents_actions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/recents_action_pin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/recents_lock_to_app_pin"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_pin_application"
                android:textColor="#5000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recents_action_multiwindow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/vector_drawable_place_top"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_multiwindow"
                android:textColor="#5000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recents_action_kill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/ic_close"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_kill"
                android:textColor="#5000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recents_action_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/ic_info"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_app_info"
                android:textColor="#5000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recents_action_wipe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/ic_wipe_data"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_wipe_data"
                android:textColor="#5000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/recents_action_uninstall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:drawableTint="#AA000000"
                android:drawableTop="@drawable/ic_delete"
                android:foreground="?android:selectableItemBackground"
                android:gravity="center"
                android:text="@string/recents_uninstall"
                android:textColor="#5000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>